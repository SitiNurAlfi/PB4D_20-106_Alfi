<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/rose"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="INSTAGRAM"
                android:textSize="19dp"
                android:textStyle="bold" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@color/lilac">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:srcCompat="@drawable/ig" />
        </FrameLayout>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="225dp"
            android:background="@color/pink">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="122dp"
                    android:layout_height="70dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/a1"
                    tools:ignore="ContentDescription,DuplicateIds,ImageContrastCheck" />

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="PING"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="IN"
                    tools:ignore="DuplicateIds" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="122dp"
                    android:layout_height="70dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/a2"
                    tools:ignore="ContentDescription,DuplicateIds,ImageContrastCheck" />

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="EGGY"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="IN" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="122dp"
                    android:layout_height="70dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/a3"
                    tools:ignore="ContentDescription,ImageContrastCheck" />

                <TextView
                    android:layout_width="124dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="6dp"
                    android:text="BITTY"
                    tools:ignore="TextContrastCheck" />

                <Button
                    android:id="@+id/button3"
                    android:layout_width="107dp"
                    android:layout_height="wrap_content"
                    android:text="IN" />
            </TableRow>
        </TableLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/purple">

            <EditText
                android:id="@+id/subject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:hint="Email"
                android:inputType="text"
                android:padding="13dp"
                tools:ignore="Autofill,HardcodedText,TextContrastCheck,UnknownId,VisualLintTextFieldSize" />

            <EditText
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/subject"
                android:layout_marginTop="9dp"
                android:background="@color/white"
                android:hint="Password"
                android:inputType="text"
                android:padding="13dp"
                tools:ignore="Autofill,HardcodedText,VisualLintTextFieldSize,TextContrastCheck" />

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:text="Login" />



        </RelativeLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>